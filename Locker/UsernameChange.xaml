<Window x:Class="Locker.UsernameChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Locker"
        mc:Ignorable="d"
        Title="Change your Username" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Enter new Username" Grid.Row="0"/>
        <TextBox x:Name="usernameBox" Grid.Row="1"/>
        <Button x:Name="saveButton" Grid.Row="2" Content="Save" Click="SaveUsername"/>
    </Grid>
</Window>
