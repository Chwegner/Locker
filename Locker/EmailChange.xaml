<Window x:Class="Locker.EmailChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Locker"
        mc:Ignorable="d"
        Title="EmailChange" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Enter new E-Mail Adress" Grid.Row="0"/>
        <TextBox x:Name="emailBox" Grid.Row="1"/>
        <Button x:Name="saveButton" Grid.Row="2" Content="Save" Click="SaveEmail"/>
    </Grid>
</Window>
